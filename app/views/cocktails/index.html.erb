<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://source.unsplash.com/random?cocktail');">
  <%= link_to 'Add a cocktail', new_cocktail_path, class: 'btn mx-5' %>
  <div class="container text-center">
    <h1>Cocktails</h1>
  </div>
</div>

<div class="container my-5">
  <div class="row">
    <div class="col">
      <div class="cards">
        <% @cocktails.each do |cocktail| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('https://images.pexels.com/photos/1283219/pexels-photo-1283219.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940')">
          <h3><%= cocktail.name %></h3>
          <%= link_to new_cocktail_dose_path(cocktail), class: 'card-tag-link' do  %>
          <i class="fas fa-plus"></i>
          <% end %>
          <div class="card-info">
           <% cocktail.doses.each do |dose| %>
           <p>
            <%= dose.description %> - <%= dose.ingredient.name %>
            <%= link_to "❌", dose_path(dose), method: :delete %>
          </p>
          <% end %>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
