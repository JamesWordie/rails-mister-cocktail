<div class="container">
  <h1>Cocktails</h1>
  <div class="row align-items-center">
    <% @cocktails.each do |cocktail| %>
    <div class="col-4 m-1">
      <div class="card" style="">
        <div class="card-body">
          <h2><%= link_to cocktail.name, cocktail %></h2>
        </div>
      </div>
    </div>
    <% end %>
  </div>

  <br>
  <%= link_to 'Add a cocktail', new_cocktail_path, class: 'btn btn-primary' %>
</div>
