<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://source.unsplash.com/random?drink');">
  <%= link_to 'All Cocktails', root_path, class: 'btn mx-5' %>
  <div class="container text-center">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container-main">
<div class="container mt-5">
  <div class="row justify-content-center ">
    <div class="col-6 shadow-sm p-3 mb-5 bg-body rounded">
      <h5 class="fw-bold text-center">Measures</h5>
      <% @cocktail.doses.each do |dose| %>
      <p class="text-center">
        <%= dose.description %> - <%= dose.ingredient.name %>  <%#= dose.garnish %>
        <%= link_to "❌", dose_path(dose), method: :delete %>
      </p>
      <% end %>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row justify-content-center ">
    <div class="col-6 shadow-sm p-3 mb-5 bg-body rounded">
      <h5 class="fw-bold text-center">Reviews</h5>
      <% @cocktail.reviews.each do |review| %>
      <p class="text-center">
        <%= review.content %> - <%= review.rating %> <i class="fas fa-star"></i>
        <%= link_to "❌", review_path(review), method: :delete %>
      </p>
      <% end %>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row justify-content-center ">
    <div class="col-6 shadow-sm p-3 mb-5 bg-body rounded">
      <h5 class="fw-bold text-center">Garnishes</h5>
      <% @cocktail.garnishes.each do |garnish| %>
      <p class="text-center">
        <%= garnish.name %>
        <%= link_to "❌", cocktail_garnish_tag_path(garnish), method: :delete %>
      </p>
      <% end %>
    </div>
  </div>
</div>
</div>
